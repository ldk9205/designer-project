<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.designer.imageDto.mapper.ImageMapper">

    <!-- ===============================
         이미지 등록
    ================================ -->
    <insert id="insertTreatmentImage">

        INSERT INTO treatment_images
        (
            treatment_id,
            image_url,
            original_name,
            created_at
        )
        VALUES
            (
                #{treatmentId},
                #{imageUrl},
                #{originalName},
                NOW()
            )

    </insert>


    <!-- ===============================
         이미지 단건 조회
    ================================ -->
    <select id="findById"
            parameterType="long"
            resultType="com.designer.imageDto.dto.ImageDto">

        SELECT
            id,
            treatment_id AS treatmentId,
            image_url AS imageUrl,
            original_name AS originalName,
            created_at AS createdAt
        FROM treatment_images
        WHERE id = #{id}

    </select>


    <!-- ===============================
         특정 treatmentDto 이미지 목록 조회
    ================================ -->
    <select id="findByTreatmentId"
            parameterType="long"
            resultType="com.designer.imageDto.dto.ImageDto">

        SELECT
            id,
            treatment_id AS treatmentId,
            image_url AS imageUrl,
            original_name AS originalName,
            created_at AS createdAt
        FROM treatment_images
        WHERE treatment_id = #{treatmentId}
        ORDER BY created_at DESC

    </select>


    <!-- ===============================
         이미지 삭제
    ================================ -->
    <delete id="deleteById"
            parameterType="long">

        DELETE FROM treatment_images
        WHERE id = #{id}

    </delete>

</mapper>
